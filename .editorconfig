root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 4

[*.sol]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{tf,tfvars}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.graphql]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
